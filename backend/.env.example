# Backend environment
APP_NAME="Family Tree API"
APP_VERSION="0.1.0"
DEBUG=true

GOOGLE_CLOUD_PROJECT="your-project-id"
FIRESTORE_DATABASE="family-tree"  # or (default)
# Optional: service account for local dev
GOOGLE_APPLICATION_CREDENTIALS="/absolute/path/to/sa.json"
GOOGLE_CLOUD_QUOTA_PROJECT="your-project-id"

JWT_SECRET="change-me-in-prod"
JWT_ALG="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Email (SMTP) for password reset
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@familytree.local"
EMAIL_FROM_NAME="Family Tree"

# Invite policy (simple)
REQUIRE_INVITE=true

# Map feature (optional) - requires Google Maps API setup
ENABLE_MAP=false
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
